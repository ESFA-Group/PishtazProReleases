{
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "PISHTAZ Pro",
      "_appTitle": "PISHTAZ Pro",
      "_appLogoPath": "./images/pishtaz-24.png",
      "_appFaviconPath": "./images/pishtaz-64.png",
      "_enableSearch": true,
      "pdf": false
    }
  }
}